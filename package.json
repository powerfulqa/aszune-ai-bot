{
  "name": "aszuneai",
  "version": "1.6.2",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:critical": "jest --config=jest.critical-coverage.config.js --coverage",
    "test:critical:ci": "jest --config=jest.critical-coverage.config.js --coverage --silent --passWithNoTests --ci",
    "coverage:critical": "jest --config=jest.critical-coverage.config.js --coverage --coverageReporters=lcov --coverageReporters=text-summary",
    "precommit": "npm run test:critical:ci",
    "security": "npm audit --audit-level=high",
    "format:md": "prettier --write '**/*.md'",
    "test:branch-coverage:index": "jest --config=index-branch-coverage.jest.config.js __tests__/unit/index-branch-coverage.test.js",
    "test:branch-coverage:logger": "jest --config=logger-branch-coverage.jest.config.js \"__tests__/unit/logger*.test.js\"",
    "test:branch-coverage": "npm run test:branch-coverage:index && npm run test:branch-coverage:logger",
    "coverage": "jest --coverage",
    "serve": "node src/index.js",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "lint": "eslint src __tests__",
    "lint:fix": "eslint src __tests__ --fix",
    "quality:check": "npm run test:critical:ci",
    "quality:fix": "prettier --write \"**/*.{js,json,md}\"",
    "quality:metrics": "echo \"Quality metrics: Use 'npm run coverage' for test coverage and 'npm run lint' for code quality\"",
    "quality:smells": "echo \"Code analysis: Use 'npm run lint' for code quality checks\"",
    "security:secrets": "echo \"Security: Manual review recommended for secrets\"",
    "security:dependencies": "npm audit --audit-level=moderate",
    "security:all": "npm run security && npm run security:secrets && npm run security:dependencies"
  },
  "keywords": [
    "discord",
    "bot",
    "ai",
    "gaming",
    "perplexity",
    "nodejs",
    "raspberry-pi"
  ],
  "author": "Chris Haycock <chrishaycock@users.noreply.github.com>",
  "license": "UNLICENSED",
  "description": "A Discord bot specialized in gaming lore, game logic, guides, and advice using the Perplexity API",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrishaycock/aszune-ai-bot.git"
  },
  "bugs": {
    "url": "https://github.com/chrishaycock/aszune-ai-bot/issues"
  },
  "homepage": "https://github.com/chrishaycock/aszune-ai-bot#readme",
  "dependencies": {
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "undici": "^7.12.0"
  },
  "devDependencies": {
    "axios": "^1.12.2",
    "codecov": "^3.8.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=20.18.1"
  }
}
