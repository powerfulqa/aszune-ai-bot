# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Development Environment
NODE_ENV=production
DEBUG=false

# Dashboard Control - Systemd Service Configuration
SERVICE_NAME=aszune-bot

# Raspberry Pi Optimizations
ENABLE_PI_OPTIMIZATIONS=false
PI_LOG_LEVEL=ERROR
PI_DEBOUNCE_MS=300
PI_MAX_CONNECTIONS=2
PI_MEMORY_LIMIT=200
PI_MEMORY_CRITICAL=250
PI_COMPACT_MODE=false
PI_REACTION_LIMIT=3
PI_LOW_CPU_MODE=false
PI_STREAM_RESPONSES=true

# Performance Monitoring
MIN_VALID_INTERVAL_MS=250
BACKOFF_MAX_MS=10000
BACKOFF_MIN_MS=500
CHECK_INTERVAL_MS=5000
CPU_THRESHOLD_PERCENT=80
MEMORY_THRESHOLD_PERCENT=85

# Instance Tracking (License Enforcement)
# For local Pi deployment, use localhost
INSTANCE_TRACKING_SERVER=http://localhost:3001/api/beacon
INSTANCE_TRACKING_ENABLED=true
REQUIRE_VERIFICATION=false
TRACKING_ADMIN_KEY=your-secret-admin-key