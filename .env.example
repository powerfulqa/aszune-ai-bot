# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# License System Configuration (currently behind feature flags)
ASZUNE_LICENSE_KEY=your_license_key_here
ASZUNE_LICENSE_FILE=/path/to/license/file
ASZUNE_LICENSE_SERVER=https://your-license-server.com
ASZUNE_LICENSE_API_KEY=your_license_server_api_key
LICENSE_SERVER_API_KEY=your_license_server_api_key

# License System Feature Flags (disabled by default for safe deployment)
ENABLE_LICENSE_VALIDATION=false
ENABLE_LICENSE_SERVER=false  
ENABLE_LICENSE_ENFORCEMENT=false

# Development Environment
NODE_ENV=production
DEBUG=false

# Dashboard Control - Systemd Service Configuration
SERVICE_NAME=aszune-bot

# Raspberry Pi Optimizations
ENABLE_PI_OPTIMIZATIONS=false
PI_LOG_LEVEL=ERROR
PI_DEBOUNCE_MS=300
PI_MAX_CONNECTIONS=2
PI_MEMORY_LIMIT=200
PI_MEMORY_CRITICAL=250
PI_COMPACT_MODE=false
PI_REACTION_LIMIT=3
PI_LOW_CPU_MODE=false
PI_STREAM_RESPONSES=true

# Performance Monitoring
MIN_VALID_INTERVAL_MS=250
BACKOFF_MAX_MS=10000
BACKOFF_MIN_MS=500
CHECK_INTERVAL_MS=5000
CPU_THRESHOLD_PERCENT=80
MEMORY_THRESHOLD_PERCENT=85

# License Feature Development Workflow
# 
# Default (Safe Deployment):
# All license features disabled - bot works as v1.5.0
#
# Development Testing:
# Set NODE_ENV=development to enable all license features
#
# Individual Feature Testing:
# ENABLE_LICENSE_VALIDATION=true  # Enable license validation
# ENABLE_LICENSE_SERVER=true      # Enable license server 
# ENABLE_LICENSE_ENFORCEMENT=true # Enable license enforcement
#
# Production Rollout:
# Enable features gradually as they're tested and approved